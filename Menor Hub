-- --- FUN√á√ïES ---
local function EnviarChat(tabela)
    local msg = tabela[math.random(1, #tabela)]
    if game:GetService("TextChatService").ChatVersion == Enum.ChatVersion.TextChatService then
        game:GetService("TextChatService").TextChannels.RBXGeneral:SendAsync(msg)
    else
        ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer(msg, "All")
    end
end

local function CriarBtn(texto, yPos, cor, iconId)
    local btn = Instance.new("TextButton", MainFrame)
    btn.Size = UDim2.new(0, 230, 0, 50)
    btn.Position = UDim2.new(0, 10, 0, yPos)
    btn.BackgroundColor3 = cor or Color3.fromRGB(30, 30, 30)
    btn.Text = "   "..texto
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 18
    Instance.new("UICorner", btn)

    if iconId then
        local img = Instance.new("ImageLabel", btn)
        img.Size = UDim2.new(0, 30, 0, 30)
        img.Position = UDim2.new(0, 10, 0.5, -15)
        img.BackgroundTransparency = 1
        img.Image = iconId
    end
    return btn
end

-- --- BOT√ïES DO MENU ---
local BGhost = CriarBtn("GHOST MODE üëª", 50, Color3.fromRGB(40, 40, 40), "rbxassetid://1458187149961597079")
local BFakeLag = CriarBtn("FAKE LAG üßä", 110, Color3.fromRGB(255, 255, 255), "rbxassetid://1458188216375972013")
BFakeLag.TextColor3 = Color3.new(0, 0, 0)

local BKill = CriarBtn("MSG KILL üî™", 170, Color3.fromRGB(0, 100, 0), "rbxassetid://1458188681125957855")
local BDie = CriarBtn("MSG DIE üíÄ", 230, Color3.fromRGB(120, 0, 0), "rbxassetid://1458188681125957855")

local BDisc = CriarBtn("DISCORD üí¨", 310, Color3.fromRGB(88, 101, 242), "rbxassetid://1458189006188838944")
local BSair = CriarBtn("FECHAR HUB", 380, Color3.fromRGB(80, 80, 80))

-- --- LOGICA ---
BGhost.MouseButton1Click:Connect(function()
    GhostAtivado = not GhostAtivado
    local char = LocalPlayer.Character
    if not char then return end
    
    if GhostAtivado then
        BGhost.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
        char.Archivable = true
        Clone = char:Clone()
        Clone.Parent = workspace
        char.Archivable = false
        for _, v in pairs(Clone:GetDescendants()) do if v:IsA("BasePart") then v.Color = Color3.new(0,1,1) v.Transparency = 0.5 v.CanCollide = false elseif v:IsA("LocalScript") or v:IsA("Script") then v:Destroy() end end
        FakePlatform = Instance.new("Part", workspace); FakePlatform.Size = Vector3.new(10,1,10); FakePlatform.Anchored = true; FakePlatform.Transparency = 1
        Camera.CameraSubject = Clone.Humanoid
        task.spawn(function()
            while GhostAtivado do
                if not Clone or not char:FindFirstChild("HumanoidRootPart") then break end
                Clone.Humanoid:Move(char.Humanoid.MoveDirection, false)
                Clone.HumanoidRootPart.CFrame = CFrame.new(Clone.HumanoidRootPart.Position, Clone.HumanoidRootPart.Position + Vector3.new(Camera.CFrame.LookVector.X, 0, Camera.CFrame.LookVector.Z))
                FakePlatform.Position = Clone.HumanoidRootPart.Position + Vector3.new(0,-16,0)
                char.HumanoidRootPart.CFrame = Clone.HumanoidRootPart.CFrame * CFrame.new(0,-15,0)
                RunService.Heartbeat:Wait()
            end
        end)
    else
        BGhost.BackgroundColor3 = Color3.fromRGB(40,40,40)
        if Clone then char:PivotTo(Clone.HumanoidRootPart.CFrame); Clone:Destroy(); Clone = nil; FakePlatform:Destroy() end
        Camera.CameraSubject = char.Humanoid
    end
end)

BFakeLag.MouseButton1Click:Connect(function()
    FakeLagAtivado = not FakeLagAtivado
    if LocalPlayer.Character then
        for _, v in pairs(LocalPlayer.Character:GetDescendants()) do
            if v:IsA("BasePart") then v.Anchored = FakeLagAtivado end
        end
    end
    BFakeLag.BackgroundColor3 = FakeLagAtivado and Color3.fromRGB(200, 200, 200) or Color3.fromRGB(255, 255, 255)
end)

BKill.MouseButton1Click:Connect(function() AutoMsgKill = not AutoMsgKill BKill.Text = AutoMsgKill and "   MSG KILL: ON" or "   MSG KILL: OFF" end)
BDie.MouseButton1Click:Connect(function() AutoMsgDie = not AutoMsgDie BDie.Text = AutoMsgDie and "   MSG DIE: ON" or "   MSG DIE: OFF" end)

BDisc.MouseButton1Click:Connect(function() setclipboard(DISCORD_LINK) print("Copiado com sucesso!") end)
BSair.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)

-- --- VERIFICA√á√ÉO DE KEY / VIP ---
local function AbrirHub()
    KeyFrame.Visible = false
    MainFrame.Visible = true
end

KeyBtn.MouseButton1Click:Connect(function()
    if KeyInput.Text == SENHA_CORRETA then
        AbrirHub()
    else
        KeyInput.Text = ""
        KeyInput.PlaceholderText = "SENHA INCORRETA!"
        task.wait(1)
        KeyInput.PlaceholderText = "Insira a Key aqui..."
    end
end)

DiscordBtn.MouseButton1Click:Connect(function()
    setclipboard(DISCORD_LINK)
    local oldText = DiscordBtn.Text
    DiscordBtn.Text = "COPIADO COM SUCESSO!"
    task.wait(2)
    DiscordBtn.Text = oldText
end)

if LocalPlayer.Name == USER_VIP then
    AbrirHub()
end

-- Monitor de Mensagens
Players.PlayerAdded:Connect(function(p)
    p.CharacterAdded:Connect(function(c)
        c:WaitForChild("Humanoid").Died:Connect(function()
            if AutoMsgKill and (LocalPlayer.Character.PrimaryPart.Position - c.PrimaryPart.Position).Magnitude < 25 then EnviarChat(FrasesKill) end
        end)
    end)
end)
LocalPlayer.Character.Humanoid.Died:Connect(function() if AutoMsgDie then EnviarChat(FrasesDie) end end)
